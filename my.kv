WindowManager:
    HomeScreen:
    ActiveGoalScreen:
    NewGoalScreen:
    MyFish:

<Button>:
    background_normal: ''
    background_color: 0.6, 0.882, 0.85, 1
    color: 0.176, 0.133, 0.133, 1

<Label>:
    color: 0.176, 0.133, 0.133, 1

<HomeScreen>:
    name: "home"

    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button:
            text: "My Fish"
            size_hint: 0.2, 0.1
            on_release:
                app.root.current = "myfish"
                root.manager.transition.direction = "down"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            pos_hint: {"bottom": 0}
            size_hint: 1, 0.1
            cols: 3
            Button:
                text: "home"
                disabled: True
            Button:
                text: "active goals"
                on_release:
                    app.root.current = "active"
                    root.manager.transition.direction = "left"
            Button:
                text: "add goal"
                on_release:
                    app.root.current = "newgoal"
                    root.manager.transition.direction = "left"

<MyFish>:
    name: "myfish"

    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Label:
            text: "My Fish"
            font_size: 60

    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        Button:
            text: "X"
            font_size: 60
            size_hint: 0.1, 0.1
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "up"

<ActiveGoalScreen>:
    name: "active"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            pos_hint: {"bottom": 0}
            size_hint: 1, 0.1
            cols: 3
            Button:
                text: "home"
                on_release:
                    app.root.current = "home"
                    root.manager.transition.direction = "right"
            Button:
                text: "active goals"
                disabled: True
            Button:
                text: "add goal"
                on_release:
                    app.root.current = "newgoal"
                    root.manager.transition.direction = "left"

<NewGoalScreen>:
    name: "newgoal"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Label:
            font_size: 60
            size_hint: 0.3, 0.3
            text: "Add New Goal"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        Button:
            size_hint: 0.2, 0.2
            text: "+"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint: 1, 0.1
            cols: 3
            Button:
                text: "home"
                on_release:
                    app.root.current = "home"
                    root.manager.transition.direction = "right"
            Button:
                text: "active goals"
                on_release:
                    app.root.current = "active"
                    root.manager.transition.direction = "right"
            Button:
                text: "add goal"
                disabled: True
