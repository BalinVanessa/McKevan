#:kivy 2.2.1
#root manager for all screens
WindowManager:
    HomeScreen:
    ActiveGoalScreen:
    NewGoalScreen:
    MyFish:
    NewGoal_Name:
    NewGoal_Times:
    NewGoal_Reminders:

#default all buttons to blue background with dark gray text
<Button>:
    background_normal: ''
    background_color: 0.6, 0.882, 0.85, 1
    color: 0.176, 0.133, 0.133, 1

#default all labels to dark gray text
<Label>:
    color: 0.176, 0.133, 0.133, 1

#default padding and spacing for grid layouts
<GridLayout>:
    padding: 10, 10
    spacing: 10, 10

#home screem
<HomeScreen>:
    #id to switching to this screen
    name: "home"

    Image:
        source: "images/home_background.jpg"
        size: root.width, root.height

    #button to acess my fish screen
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        padding: 10, 10
        Button:
            text: "My Fish"
            size_hint: 0.33, 0.1
            on_release:
                app.root.current = "myfish"
                root.manager.transition.direction = "down"
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5
                Line:
                    width: 4
                    rectangle: self.x, self.y, self.width, self.height

    # nav bar (home)
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            pos_hint: {"bottom": 0}
            size_hint: 1, 0.1
            cols: 3
            Button:
                text: "home"
                disabled: True
            Button:
                text: "active goals"
                on_release:
                    app.root.current = "active"
                    root.manager.transition.direction = "left"
            Button:
                text: "add goal"
                on_release:
                    app.root.current = "newgoal"
                    root.manager.transition.direction = "left"

# My Fish screen
<MyFish>:
    # Id for switching to my fish screen
    name: "myfish"

    # title of screen (not currently in the correct position)
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Label:
            text: "My Fish"
            font_size: 60

    # button for returning to home screen
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        Button:
            text: "X"
            font_size: 60
            size_hint: 0.1, 0.1
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "up"

# screen for displaying active goals
<ActiveGoalScreen>:
    # Id for navigating to this screen
    name: "active"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.3
            #goal name
            #wraps up to 2 lines (about 50 char)
            Label:
                id: goal_title_label
                text: root.currentTask.title
                text_size: self.size
                font_size: 60
                halign: 'center'
            # achieved count
            Label:
                id: goal_progress_label
                text: root.currentProgress
                font_size: 40

    # image of the fish which is being revealed
    #TODO implement the fuction to change image source path
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        Image:
            size_hint_y: 0.3
            source: "images/fish/5.png"

    # nav bar (active goal) & buttons beneth Fish
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"

        BoxLayout:
            size_hint: 1, 0.3
            orientation: "vertical"
            spacing: 10
            pos_hint: {'center_x':0.5}

            #Log Progress Button
            Button:
                id: log_progress_button
                on_press: root.logProgress()
                text: "Log Progress"
                size_hint_x: 0.3
                pos_hint: {'center_x':0.5}

            #Delete Goal Button
            Button:
                id: flush_fish_button
                on_press: root.flushFish()
                text: "Flush Fish"
                size_hint_x: 0.3
                pos_hint: {'center_x':0.5}

            #Arrows for navigating active goals and screen indicator
            BoxLayout:
                orientation: "horizontal"
                size_hint_x: 0.6
                pos_hint: {'center_x':0.5}
                #left arrow
                Button:
                    id: prev_task_button
                    on_press: root.prevTask()
                    background_color: 1, 1, 1, 1
                    border: (0, 0, 0, 0)
                    background_normal: "images/arrow_left.png"
                    background_down: "images/arrow_left.png"
                    size_hint_x: 0.3
                #TODO: Active goal index
                Label:
                    text:
                        "* * *"
                #right arrow
                Button:
                    id: next_task_button
                    on_press: root.nextTask()
                    background_color: 1, 1, 1, 1
                    background_normal: "images/arrow_right.png"
                    background_down: "images/arrow_right.png"
                    border: (0, 0, 0, 0)
                    size_hint_x: 0.3

            #nav bar (active goals)
            GridLayout:
                pos_hint: {"bottom": 0}
                cols: 3
                size_hint: 1, 1.6
                Button:
                    text: "home"
                    on_release:
                        app.root.current = "home"
                        root.manager.transition.direction = "right"
                Button:
                    text: "active goals"
                    disabled: True
                Button:
                    text: "add goal"
                    on_release:
                        app.root.current = "newgoal"
                        root.manager.transition.direction = "left"

#Screen for new goals
<NewGoalScreen>:
    #Id for navigating to new goal
    name: "newgoal"

    #Title of screen
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Label:
            font_size: 60
            size_hint: 0.3, 0.3
            text: "Add New Goal"

    #add a new goal button
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        Button:
            background_color: 1, 1, 1, 1
            background_normal: "images/plus_button.png"
            background_down: "images/plus_button.png"
            border: (0, 0, 0, 0)
            size_hint: 0.3, 0.17
            on_release:
                app.root.current = "newgoal_name"
                root.manager.transition.direction = "down"

    #nav bar (add new goal)
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint: 1, 0.1
            cols: 3
            Button:
                text: "home"
                on_release:
                    app.root.current = "home"
                    root.manager.transition.direction = "right"
            Button:
                text: "active goals"
                on_release:
                    app.root.current = "active"
                    root.manager.transition.direction = "right"
            Button:
                text: "add goal"
                disabled: True

#screen for setting Name of goal
<NewGoal_Name>:
    name: "newgoal_name"

    #Title
    GridLayout:
        cols: 1
        Label:
            text: "What is your goal?"
            font_size: 60
        Label:
            text: "Write a custom goal"
            font_size: 40

        #Custom goal entry box
        TextInput:
            id: goal_name
            multiline: False
        Label:
            text: "or"
            font_size: 60

        #Goal Presets
        Label:
            text: "Choose a preset"
            font_size: 40
        Button:
            text: "text someone first"
        Button:
            text: "call a family memeber"
        Button:
            text: "compliment a friend"
        Button:
            text: "attend a club"
        Button:
            text: "try something new with someone"

        #back and forward buttons
        GridLayout:
            size_y: root.height * 0.1
            padding: 0, 0
            cols: 2
            Button:
                text: "back"
                on_release:
                    app.root.current = "newgoal"
                    root.manager.transition.direction = "up"
            Button:
                text: "next"
                on_release:
                    app.root.current = "newgoal_times"
                    root.manager.transition.direction = "left"

#screen for setting number of times you want to achive
<NewGoal_Times>:
    name: "newgoal_times"

    #Title
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"

        BoxLayout:
            size_hint: 1, 0.15
            orientation: "vertical"
            Label:
                text: "How many times would you"
                font_size: "60"
            Label:
                text: "like to achive this goal?"
                font_size: "60"

    #Number entry for number to achive
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        BoxLayout:
            size_hint: 0.4, 0.22
            orientation: "horizontal"
            spacing: 10

            TextInput:
                id: goal_achive_number
                multiline: False
                hint_text: "10"

            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.4
                spacing: 10
                Button:
                    text: "^"

                Button:
                    text: "v"

    # back and forward buttons 
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            size_hint: 1, 0.1
            cols: 2
            Button:
                text: "back"
                on_release:
                    app.root.current = "newgoal_name"
                    root.manager.transition.direction = "right"
            Button:
                text: "next"
                on_release:
                    app.root.current = "newgoal_reminders"
                    root.manager.transition.direction = "left"

#screen for setting reminder time and day
<NewGoal_Reminders>:
    name: "newgoal_reminders"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        BoxLayout:
            size_hint: 1, 0.2
            orientation: "vertical"
            Label:
                text: "How frequently would you"
                font_size: 60
            Label:
                text: "like to be reminded of"
                font_size: 60
            Label:
                text: "this goal?"
                font_size: 60

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.8, 0.35
            spacing: 30

            BoxLayout:
                orientation: "horizontal"

                BoxLayout:
                    orientation: "vertical"
                    Image:
                        source: "images/arrow_up.png"
                        border: (0, 0, 0, 0)
                        size_hint_x: 0.2
                        pos_hint: {'center_x':0.5}
                    Label:
                        text: "3"
                        font_size: 80
                    Image:
                        source: "images/arrow_down.png"
                        border: (0, 0, 0, 0)
                        size_hint_x: 0.2
                        pos_hint: {'center_x':0.5}
                Image:
                    size_hint_x: 0.05
                    source: "images/clock_colon.png"
                    border: (0, 0, 0, 0)
                BoxLayout:
                    orientation: "vertical"
                    Image:
                        source: "images/arrow_up.png"
                        border: (0, 0, 0, 0)
                        size_hint_x: 0.2
                        pos_hint: {'center_x':0.5}
                    Label:
                        text: "45"
                        font_size: 80
                    Image:
                        source: "images/arrow_down.png"
                        border: (0, 0, 0, 0)
                        size_hint_x: 0.2
                        pos_hint: {'center_x':0.5}
                BoxLayout:
                    orientation: "vertical"
                    Image:
                        source: "images/arrow_up.png"
                        border: (0, 0, 0, 0)
                        size_hint_x: 0.2
                        pos_hint: {'center_x':0.5}
                    Label:
                        text: "PM"
                        font_size: 80
                    Image:
                        source: "images/arrow_down.png"
                        border: (0, 0, 0, 0)
                        size_hint_x: 0.2
                        pos_hint: {'center_x':0.5}

            GridLayout:
                cols: 7
                size_hint_y: 0.35

                CheckBox:
                    on_active: app.reminder_check_click(self, self.active, "monday")
                CheckBox:
                    on_active: app.reminder_check_click(self, self.active, "tuesday")
                CheckBox:
                    on_active: app.reminder_check_click(self, self.active, "wednesday")
                CheckBox:
                    on_active: app.reminder_check_click(self, self.active, "thursday")
                CheckBox:
                    on_active: app.reminder_check_click(self, self.active, "friday")
                CheckBox:
                    on_active: app.reminder_check_click(self, self.active, "saturday")
                CheckBox:
                    on_active: app.reminder_check_click(self, self.active, "sunday")

                Label:
                    text: "Mon"
                Label:
                    text: "Tue"
                Label:
                    text: "Wed"
                Label:
                    text: "Thu"
                Label:
                    text: "Fri"
                Label:
                    text: "Sat"
                Label:
                    text: "Sun"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            cols: 2
            size_hint: 1, 0.1
            Button:
                text: "back"
                on_release:
                    app.root.current = "newgoal_times"
                    root.manager.transition.direction = "right"

            Button:
                text: "next"
                on_release:
                    app.root.current = "newgoal" if app.new_goal_next() else "newgoal_reminders"
                    root.manager.transition.direction = "up"