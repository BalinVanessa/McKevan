#:kivy 2.2.1
#root manager for all screens

WindowManager:
    HomeScreen:
    ActiveGoalScreen:
    NewGoalScreen:
    MyFish:
    NewGoal_Name:
    NewGoal_Times:
    NewGoal_Reminders:

#default all buttons to blue background with dark gray text
<Button>:
    background_normal: ''
    background_color: 0.6, 0.882, 0.85, 1
    color: 0.176, 0.133, 0.133, 1


#default for all horizontal lines to be black
<HorizontalLine@Label>:
    size_hint_x: 1  # This will cause the line to fill the width of its container
    height: '2dp'  # This sets the thickness of the line
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Set the color to black
        Rectangle:
            pos: self.pos
            size: self.size


#default all labels to dark gray text
<Label>:
    color: 0.176, 0.133, 0.133, 1

<Checkbox>:
    color: 0, 0.5, 0.52, 1


#default padding and spacing for grid layouts
<GridLayout>:
    padding: 10, 10
    spacing: 10, 10

#home screem
<HomeScreen>:
    #id to switching to this screen
    name: "home"

    Image:
        source: "images/home_background.jpg"
        size: root.width, root.height

    #button to acess my fish screen
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        padding: 10, 10
        Button:
            text: "My Completed\n          Fish"
            size_hint: 0.33, 0.1
            on_release:
                app.root.current = "myfish"
                root.manager.transition.direction = "down"
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5
                Line:
                    width: 4
                    rectangle: self.x, self.y, self.width, self.height

    # Container for animated images
    BoxLayout:
        id: image_container
        orientation: 'horizontal'


    # nav bar (home)
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            pos_hint: {"bottom": 0}
            size_hint: 1, 0.1
            cols: 3
            Button:
                text: "Home"
                disabled: True
            Button:
                text: "Active Goals"
                on_release:
                    app.root.current = "active"
                    root.manager.transition.direction = "left"
            Button:
                text: "Add New Goal"
                on_release:
                    app.root.current = "newgoal"
                    root.manager.transition.direction = "left"

# My Fish screen
<MyFish>:
    # Id for switching to my fish screen
    name: "myfish"

    BoxLayout:
        orientation: 'vertical'

        # Title of screen
        Label:
            text: "My Completed Fish"
            size_hint: (1, None)
            height: self.texture_size[1]
            font_size: '24sp'

        # Container for fish images and horizontal lines
        ScrollView:
            size_hint: (1, 1)
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 20
            bar_color: [0.6, 0.882, 0.85, 1]

            GridLayout:
                id: fish_container
                cols: 1
                spacing: '2dp'
                size_hint_y: None
                width: self.minimum_width
                height: self.minimum_height

        # Button for returning to home screen
        Button:
            text: "Back"
            size_hint: (None, None)
            size: ('70dp', '48dp')
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "up"


# screen for displaying active goals
<ActiveGoalScreen>:

    # Id for navigating to this screen
    name: "active"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.3
            #goal name
            #wraps up to 2 lines (about 50 char)
            Label:
                id: goal_title_label
                text: root.currentTask.title
                text_size: self.size
                font_size: 40
                halign: 'center'
            # achieved count
            Label:
                id: goal_progress_label
                text: root.currentProgress
                font_size: 40

    # image of the fish which is being revealed
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        Image:
            id: goal_fish_img
            size_hint_y: 0.3
            source: "images/fish/5.png"

    # nav bar (active goal) & buttons beneth Fish
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"


        BoxLayout:
            size_hint: 1, 0.3
            orientation: "vertical"
            spacing: 10
            pos_hint: {'center_x':0.5}

            #Log Progress Button
            Button:
                id: log_progress_button
                on_press: root.logProgress()
                text: "Log Progress"
                size_hint_x: 0.3
                pos_hint: {'center_x':0.5}

            #Delete Goal Button
            Button:
                id: flush_fish_button
                text: "Flush Fish"
                on_press: root.show_confirmation_popup()
                size_hint_x: 0.3
                pos_hint: {'center_x':0.5}

            #Arrows for navigating active goals and screen indicator
            BoxLayout:
                orientation: "horizontal"
                size_hint_x: 0.6
                pos_hint: {'center_x':0.5}
                #left arrow
                Button:
                    id: prev_task_button
                    on_press: root.prevTask()
                    opacity: 0
                    disabled: True
                    background_color: 1, 1, 1, 1
                    border: (0, 0, 0, 0)
                    background_normal: "images/arrow_left.png"
                    background_down: "images/arrow_left.png"
                    size_hint_x: 0.3

                Label:
                    id: active_goal_index
                    text:
                        "o · ·"
                    font_size: 40
                #right arrow
                Button:
                    id: next_task_button
                    on_press: root.nextTask()
                    background_color: 1, 1, 1, 1
                    background_normal: "images/arrow_right.png"
                    background_down: "images/arrow_right.png"
                    border: (0, 0, 0, 0)
                    size_hint_x: 0.3
                    spacing: 10

            #nav bar (active goals)
            GridLayout:
                pos_hint: {"bottom": 0}
                cols: 3
                size_hint: 1, 1.6
                Button:
                    text: "Home"
                    on_release:
                        app.root.current = "home"
                        root.manager.transition.direction = "right"
                Button:
                    text: "Active Goals"
                    disabled: True
                Button:
                    text: "Add New Goal"
                    on_release:
                        app.root.current = "newgoal"
                        root.manager.transition.direction = "left"

#Screen for new goals
<NewGoalScreen>:
    #Id for navigating to new goal
    name: "newgoal"

    #Title of screen
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Label:
            font_size: 40
            size_hint: 0.3, 0.3
            text: "Add New Goal"

    #add a new goal button
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        Button:
            background_color: 1, 1, 1, 1
            background_normal: "images/plus_button.png"
            background_down: "images/plus_button.png"
            border: (0, 0, 0, 0)
            size_hint: 0.3, 0.17
            on_release:
                app.root.current = "newgoal_name"
                root.manager.transition.direction = "down"

    #nav bar (add new goal)
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint: 1, 0.1
            cols: 3
            Button:
                text: "Home"
                on_release:
                    app.root.current = "home"
                    root.manager.transition.direction = "right"
            Button:
                text: "Active Goals"
                on_release:
                    app.root.current = "active"
                    root.manager.transition.direction = "right"
            Button:
                text: "Add New Goal"
                disabled: True

#screen for setting Name of goal
<NewGoal_Name>:
    name: "newgoal_name"

    #Title
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"

        BoxLayout:
            size_hint: 1, 0.8
            orientation: "vertical"
            spacing: 10
            padding: 10, 10

            Label:
                text: "What is your goal?\n\nWrite a custom goal"
                font_size: 40
                halign: 'center'

            #Custom goal entry box
            TextInput:
                size_hint_y: 0.25
                id: goal_name_entry
                multiline: False
                size_hint_x: 0.8
                pos_hint: {"center_x":0.5}

            Label:
                text: "or\n\nChoose a preset"
                font_size: 40
                halign: 'center'

            #Goal Presets
            BoxLayout:
                orientation: "vertical"
                spacing: 50

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: 0.8
                    pos_hint: {'center_x':0.5}
                    CheckBox:
                        group: "preset_goals"
                        size_hint_x: 0.25
                        on_active: root.name_check_click(self, self.active, "Text Someone First")
                    Label:
                        text: "Text Someone First"
                        font_size: 40

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: 0.8
                    pos_hint: {'center_x':0.5}
                    CheckBox:
                        group: "preset_goals"
                        size_hint_x: 0.25
                        on_active: root.name_check_click(self, self.active, "Call a Family Member")
                    Label:
                        text: "Call a Family Member"
                        font_size: 40


                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: 0.8
                    pos_hint: {'center_x':0.5}
                    CheckBox:
                        group: "preset_goals"
                        size_hint_x: 0.25
                        on_active: root.name_check_click(self, self.active, "Compliment a Friend")
                    Label:
                        text: "Compliment a Friend"
                        font_size: 40


                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: 0.8
                    pos_hint: {'center_x':0.5}
                    CheckBox:
                        group: "preset_goals"
                        size_hint_x: 0.25
                        on_active: root.name_check_click(self, self.active, "Attend a Club")
                    Label:
                        text: "Attend a Club"
                        font_size: 40


                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: 0.8
                    pos_hint: {'center_x':0.5}
                    CheckBox:
                        group: "preset_goals"
                        size_hint_x: 0.25
                        on_active: root.name_check_click(self, self.active, "Have Lunch with Someone")
                    Label:
                        text: "Have Lunch with Someone"
                        font_size: 40


        #back and forward buttons
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            padding: 0

            GridLayout:
                size_hint: 1, 0.1
                cols: 2

                Button:
                    text: "Back"
                    on_release:
                        app.root.current = "newgoal"
                        root.manager.transition.direction = "up"
                Button:
                    text: "Next"
                    on_release:
                        app.root.current = "newgoal_times" if root.new_goal_next_name() else "newgoal_name"
                        root.manager.transition.direction = "left"

#screen for setting number of times you want to achive
<NewGoal_Times>:
    name: "newgoal_times"

    #Title
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        padding: 20

        BoxLayout:
            size_hint: 1, 0.15
            orientation: "vertical"
            Label:
                text: "How many times would you"
                font_size: 40
            Label:
                text: "like to achieve this goal?"
                font_size: 40

    #Number entry for number to achive
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint: 0.3, 0.1

            TextInput:
                id: goal_achieve_number
                multiline: False
                text: "10"
                font_size: 40

    # back and forward buttons 
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            size_hint: 1, 0.1
            cols: 2
            Button:
                text: "Back"
                on_release:
                    app.root.current = "newgoal_name"
                    root.manager.transition.direction = "right"
            Button:
                text: "Next"
                on_release:
                    app.root.current = "newgoal_reminders" if root.new_goal_next() else "newgoal_times"
                    root.manager.transition.direction = "left"

#screen for setting reminder time and day
<NewGoal_Reminders>:
    name: "newgoal_reminders"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        padding: 20
        BoxLayout:
            size_hint: 1, 0.2
            orientation: "vertical"
            Label:
                text: "How frequently would you"
                font_size: 40
            Label:
                text: "like to be reminded of"
                font_size: 40
            Label:
                text: "this goal?"
                font_size: 40

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.8, 0.35
            spacing: 30

            BoxLayout:
                orientation: "horizontal"

                BoxLayout:
                    orientation: "vertical"
                    Button:
                        background_color: 1, 1, 1, 1
                        background_normal: "images/arrow_up.png"
                        background_down: "images/arrow_up.png"
                        border: (0, 0, 0, 0)
                        size_hint: 0.25, 0.3
                        pos_hint: {'center_x':0.5}
                        on_press: root.hours_increase()
                    Label:
                        id: hours_label
                        text: "3"
                        font_size: 80
                    Button:
                        background_color: 1, 1, 1, 1
                        background_normal: "images/arrow_down.png"
                        background_down: "images/arrow_down.png"
                        border: (0, 0, 0, 0)
                        size_hint: 0.25, 0.3
                        pos_hint: {'center_x':0.5}
                        on_press: root.hours_decrease()
                Image:
                    size_hint_x: 0.05
                    source: "images/clock_colon.png"
                    border: (0, 0, 0, 0)
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        background_color: 1, 1, 1, 1
                        background_normal: "images/arrow_up.png"
                        background_down: "images/arrow_up.png"
                        border: (0, 0, 0, 0)
                        size_hint: 0.25, 0.3
                        pos_hint: {'center_x':0.5}
                        on_press: root.minuets_increase()
                    Label:
                        id: minuets_label
                        text: "45"
                        font_size: 80
                    Button:
                        background_color: 1, 1, 1, 1
                        background_normal: "images/arrow_down.png"
                        background_down: "images/arrow_down.png"
                        border: (0, 0, 0, 0)
                        size_hint: 0.25, 0.3
                        pos_hint: {'center_x':0.5}
                        on_press: root.minuets_decrease()
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        background_color: 1, 1, 1, 1
                        background_normal: "images/arrow_up.png"
                        background_down: "images/arrow_up.png"
                        border: (0, 0, 0, 0)
                        size_hint: 0.25, 0.3
                        pos_hint: {'center_x':0.5}
                        on_press: root.am_pm_increase()
                    Label:
                        id: am_pm_label
                        text: "PM"
                        font_size: 80
                    Button:
                        background_color: 1, 1, 1, 1
                        background_normal: "images/arrow_down.png"
                        background_down: "images/arrow_down.png"
                        border: (0, 0, 0, 0)
                        size_hint: 0.25, 0.3
                        pos_hint: {'center_x':0.5}
                        on_press: root.am_pm_decrease()

            GridLayout:
                cols: 7
                size_hint_y: 0.35

                CheckBox:
                    id: check_mon
                    on_active: root.reminder_check_click(self, self.active, "monday")
                CheckBox:
                    id: check_tue
                    on_active: root.reminder_check_click(self, self.active, "tuesday")
                CheckBox:
                    id: check_wed
                    on_active: root.reminder_check_click(self, self.active, "wednesday")
                CheckBox:
                    id: check_thurs
                    on_active: root.reminder_check_click(self, self.active, "thursday")
                CheckBox:
                    id: check_fri
                    on_active: root.reminder_check_click(self, self.active, "friday")
                CheckBox:
                    id: check_sat
                    on_active: root.reminder_check_click(self, self.active, "saturday")
                CheckBox:
                    id: check_sun
                    on_active: root.reminder_check_click(self, self.active, "sunday")

                Label:
                    text: "Mon"
                Label:
                    text: "Tue"
                Label:
                    text: "Wed"
                Label:
                    text: "Thu"
                Label:
                    text: "Fri"
                Label:
                    text: "Sat"
                Label:
                    text: "Sun"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        GridLayout:
            cols: 2
            size_hint: 1, 0.1
            Button:
                text: "Back"
                on_release:
                    app.root.current = "newgoal_times"
                    root.manager.transition.direction = "right"

            Button:
                text: "Create New Goal"
                on_release:
                    app.root.current = "active" if root.new_goal_next_reminders() else "newgoal_reminders"
                    root.manager.transition.direction = "up"