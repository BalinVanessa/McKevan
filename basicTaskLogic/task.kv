#:kivy 2.2.1

<TaskScreen>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        # Current Task's Title
        Label:
            id: task_title_label
            font_size: 32
            text: root.currentTask.title

        Label:
            id: task_progress_label
            font_size: 32
            text: root.currentProgress

        # Log Progress Button
        Button:
            id: log_progress_button
            text:"Log Progress"
            on_press: root.logProgress()

        # Flush Fish Button
        Button:
            id: flush_fish_button
            text: "Flush Fish"
            on_press: root.flushFish()
    
        # Next Task Button
        Button:
            id: next_task_button
            text: "Next Task"
            font_size: 32
            on_press: root.nextTask()

        # Previous Task Button
        Button:
            id: prev_task_button
            text: "Previous Task"
            # Starts it off disabled cause we start on the first task
            disabled: True
            font_size: 32
            on_press: root.prevTask()